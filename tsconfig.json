{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": false,
    "skipLibCheck": false
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}